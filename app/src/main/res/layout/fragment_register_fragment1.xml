<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:background="@drawable/register_background_blur"
    tools:context="com.example.sam.lowcarbon.RegisterFragment1">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="低碳行"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.274" />

    <android.support.design.widget.TextInputEditText
        android:id="@+id/telephone_text"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/login_input_background"
        android:drawableLeft="@drawable/ic_login_userid"
        android:hint="手机号"
        android:imeOptions="actionNext"
        android:nextFocusForward="@id/code_text"
        android:inputType="phone"
        android:lines="1"
        android:padding="10dp"
        android:textColorHint="#FFFFFF"
        app:layout_constraintLeft_toLeftOf="@+id/textView5"
        app:layout_constraintRight_toRightOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />


    <android.support.design.widget.TextInputEditText
        android:id="@+id/code_text"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/login_input_background"
        android:drawableLeft="@drawable/ic_login_password"
        android:hint="验证码"
        android:imeOptions="actionDone"
        android:inputType="numberPassword"
        android:lines="1"
        android:padding="10dp"
        android:textColorHint="#ffffff"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="@+id/telephone_text"
        app:layout_constraintRight_toRightOf="@+id/telephone_text"
        app:layout_constraintTop_toBottomOf="@+id/telephone_text" />

    <Button
        android:id="@+id/next_button"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/login_button_background"
        android:text="下一步"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="@+id/code_text"
        app:layout_constraintRight_toRightOf="@+id/code_text"
        app:layout_constraintTop_toBottomOf="@+id/code_text" />

    <Button
        android:id="@+id/clear_button"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/ic_clear_selector"
        app:layout_constraintBottom_toBottomOf="@+id/telephone_text"
        app:layout_constraintRight_toRightOf="@+id/telephone_text"
        app:layout_constraintTop_toTopOf="@+id/telephone_text" />

    <Button
        android:id="@+id/message_button"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/ic_message_selector"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/code_text"
        app:layout_constraintRight_toRightOf="@+id/code_text"
        app:layout_constraintTop_toTopOf="@+id/code_text" />


</android.support.constraint.ConstraintLayout>
